<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    android:orientation="vertical"
    tools:context=".PersonalityQuizActivity">

    <TextView
        android:id="@+id/count_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/10"
        android:textColor="#FFF"
        android:fontFamily="@font/neucha"
        android:textSize="30dp"
        android:gravity="right"
        android:paddingRight="20dp"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/neucha"
        android:gravity="center_horizontal"
        android:maxHeight="140dp"
        android:minHeight="120dp"
        android:padding="8dp"
        android:paddingHorizontal="10dp"
        android:text="Вопрос 1"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/answer_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_white_border"
            android:fontFamily="@font/neucha"
            android:onClick="answer1Clicked"
            android:text="Ответ 1"
            android:textColor="#FFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/answer_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_white_border"
            android:fontFamily="@font/caveatregular"
            android:onClick="answer2Clicked"
            android:text="Ответ 2"
            android:textColor="#FFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/answer_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_white_border"
            android:fontFamily="@font/neucha"
            android:onClick="answer3Clicked"
            android:text="Ответ 3"
            android:textColor="#FFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/answer_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_white_border"
            android:fontFamily="@font/neucha"
            android:onClick="answer4Clicked"
            android:text="Ответ 4"
            android:textColor="#FFF"

            android:visibility="visible" />


    </LinearLayout>

    <Button
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_white_border"
        android:fontFamily="@font/caveatregular"
        android:onClick="back"
        android:text="Назад"

        android:textColor="#000" />


</LinearLayout>